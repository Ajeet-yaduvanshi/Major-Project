<% layout("/layouts/boilerplate") %>

<div class="container mt-4">

    <!-- Title -->
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <h3><%= listing.title %></h3>
        </div>
    </div>

    <!-- Listing Card -->
    <div class="row mt-3">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card show-card listing-card">
                <img src="<%= listing.image.url %>" 
                     class="card-img-top img-fluid show-img" 
                     alt="listing_image">

                <div class="card-body">
                    <p class="card-text">
                        <strong>Owner:</strong> 
                        <i><%= listing.owner.username %></i><br>

                        <%= listing.description %><br>

                        &#8377;<%= listing.price.toLocaleString("en-IN") %><br>

                        <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit/Delete Buttons -->
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="row mt-3">
        <div class="col-12 col-md-8 offset-md-2 d-flex gap-2">
            <a href="/listings/<%= listing._id %>/edit" 
               class="btn btn-dark">
               Edit
            </a>

            <form method="POST" 
                  action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger">
                    Delete
                </button>
            </form>
        </div>
    </div>
    <% } %>

    <!-- Review Form -->
    <% if(currentUser) { %>
    <div class="row mt-4">
        <div class="col-12 col-md-8 offset-md-2">
            <hr>
            <h4>Leave a Review</h4>

            <form action="/listings/<%= listing._id %>/reviews" 
                  method="POST" 
                  novalidate 
                  class="needs-validation">

                <div class="mb-3">
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate"
                               name="review[rating]" value="0" checked />

                        <% for(let i=1; i<=5; i++){ %>
                        <input type="radio" id="rate-<%= i %>"
                               name="review[rating]" value="<%= i %>" />
                        <label for="rate-<%= i %>"><%= i %> star</label>
                        <% } %>
                    </fieldset>
                </div>

                <div class="mb-3">
                    <label for="comment" class="form-label">
                        Comment
                    </label>
                    <textarea name="review[comment]" 
                              id="comment"
                              rows="4"
                              class="form-control"
                              required></textarea>

                    <div class="invalid-feedback">
                        Please enter your comment
                    </div>
                </div>

                <button class="btn btn-outline-dark">
                    Submit
                </button>
            </form>
        </div>
    </div>
    <% } %>

    <!-- Reviews Section -->
    <div class="row mt-4">
        <div class="col-12 col-md-8 offset-md-2">
            <hr>
            <h4>Reviews:</h4>
        </div>
    </div>

    <div class="row mt-3">
        <% for(let review of listing.reviews){ %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">

                    <h5 class="card-title">
                        Rating: <%= review.rating %> / 5
                    </h5>

                    <p class="card-text">
                        By: <i><%= review.author.username %></i>
                    </p>

                    <p class="starability-result"
                       data-rating="<%= review.rating %>"></p>

                    <p class="card-text">
                        <%= review.comment %>
                    </p>

                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                          method="POST">
                        <button type="submit"
                                class="btn btn-danger btn-sm">
                            Delete Review
                        </button>
                    </form>

                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Map Section -->
    <% 
    let coords = [77.1025, 28.7041];
    if(listing.geometry && listing.geometry.coordinates){
       coords = listing.geometry.coordinates;
    }
    %>

    <div class="row mt-4">
        <div class="col-12 col-md-8 offset-md-2 mb-5">
            <h3>Where you'll be</h3>
            <div id="map" 
                 style="height: 400px;" 
                 data-coords='<%- JSON.stringify(coords) %>'>
            </div>
        </div>
    </div>

</div>


<script>
const mapDiv = document.getElementById("map");
const coordinates = JSON.parse(mapDiv.dataset.coords);

const latLng = [coordinates[1], coordinates[0]];

const map = L.map('map').setView(latLng, 12);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '© OpenStreetMap contributors'
}).addTo(map);

L.marker(latLng)
  .addTo(map)
  .bindPopup(`
    <strong><%= listing.title %></strong><br>
    <%= listing.location %>, <%= listing.country %><br>
    ₹<%= listing.price.toLocaleString("en-IN") %> / night
  `)
  .openPopup();
</script>



